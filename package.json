{
  "scripts": {
    "build": "rm -rf dist && npm run build:esm && npm run build:ts && npm run build:js && npm run build:css && npm run copy",
    "build:css": "postcss src/styles.css -o dist/static/app.min.css",
    "build:esm": "pika-web --dest dist/web_modules --optimize --babel=false",
    "build:js": "babel dist --out-dir dist",
    "build:ts": "tsc",
    "copy": "copyfiles 'src/*.html' 'src/**/*.gif' dist -u 1",
    "lint": "eslint --ext .ts,.tsx src",
    "prestart": "npm run build",
    "start": "serve -s dist"
  },
  "@pika/web": {
    "webDependencies": [
      "vue/dist/vue.esm.browser.js",
      "vue-router"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@pika/web": "^0.6.1",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.2.0",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "concurrently": "^4.1.2",
    "copyfiles": "^2.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-prettier": "^3.1.0",
    "postcss": "^7.0.18",
    "postcss-cli": "^6.1.3",
    "postcss-easy-import": "^3.0.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "serve": "^11.1.0",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.1.0",
    "typescript": "^3.6.3",
    "vue": "^2.6.10",
    "vue-router": "^3.1.3"
  }
}
